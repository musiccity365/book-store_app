<h1>New Books</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :author %>
  <%= f.text_field :author %><br>
  <%= f.label :publisher %>
  <%= f.text_field :publisher %><br>
  <%= f.label :genre %>
  <%= f.text_field :genre %><br>
  <%= f.label :release_year %>
  <%= f.text_field :release_year %>
    <h2>New Book Rating</h2>
  <%= f.fields_for :ratings do |r| %>
    <%= r.label "Rating Title:"%><br>
    <%= r.text_field :title %><br>
    <%= r.label "Rating Score:"%><br>
    <%= r.number_field :score %><br>
    <%= r.label "Content:" %><br>
    <%= r.text_area :content %><br>
  <% end %>
  <%= f.submit %>

<% end %>

