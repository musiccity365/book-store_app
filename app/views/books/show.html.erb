
<h1>Books Show</h1>

Title: <%= @book.title %> <br>

Author: <%= @book.author %><br>

Publisher: <%= @book.publisher %><br>

Genre: <%= @book.genre %><br>

Released: <%= @book.release_year %><br><br>

<h2>New Rating</h2>

<%= form_for(new_book_rating_path(@book)) do |f| %>
  <%= f.label "Rating Title:"%>
  <%= f.text_field :title %><br><br>

  <%= f.label "Rating Score:"%>
  <%= f.number_field :score %><br><br>

  <%= f.label "Content:" %>
  <p><%= f.text_area :content %></p>
  <br>

  </p>
  <%= f.submit "Create Rating" %>

<% end %>

<h2>All Ratings</h2>
<%= render 'ratings/rate' %>
