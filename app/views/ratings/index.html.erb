<h1>All Ratings</h1>

<% if @book %>
  <%= link_to 'New Rating', new_book_rating_path(@book) %>
<% else %>
  <%= link_to 'New Rating', new_rating_path %>
<% end %>
<ul>
<br>
<% @ratings.each do |rating| %>
  Rating Title: <%= link_to rating.title, rating_path(rating.id) %><br>
  Book Info: <%= link_to rating.book.title, book_path(rating.book_id) %><br>
  Rating Author: <%= rating.user.username %><br>
  Score: <%= rating.score %><br><br>
-------------------------------------------------------------------------------------------------------
<br><br>
<% end %>
</ul>
