<h1>Welcome <%= @user.name %></h1>
Username: <%= @user.username %><br>
Email: <%= @user.email %><br>

Ratings: <%= @user.ratings.count %>

<br><br>

<% @user.ratings.each do |rating| %>
    <br><br>
    <b>Rating Title:</b> <%= link_to rating.title, rating_path(rating.id) %>
    <br>
    <b>Book Title:</b> <%= link_to rating.book.title, book_path(rating.book_id) %>
    <br>
    <b>Content: </b> <%= rating.content %>
    <br><br>
    -------------------------------------------------------------------------------------------------------
<% end %>